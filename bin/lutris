"""Program entry point"""

import os
import sys
import signal
import locale
import gettext
from os.path import realpath, dirname, normpath
# pylint: disable=E0611
from gi.repository import Gtk


LAUNCH_PATH = dirname(realpath(__file__))
if LAUNCH_PATH != "/usr/bin":
    SOURCE_PATH = normpath(os.path.join(LAUNCH_PATH, '..'))
    sys.path.insert(0, SOURCE_PATH)

from lutris.gui import dialogs
from lutris.gui.application import Application

try:
    import yaml as _yaml  # noqa
except ImportError:
    q = dialogs.QuestionDialog({'title': "Dependency not available",
                                'question': "PythonYAML is not installed,\n"
                                            "do you want to install it now?"})
    if q.result == Gtk.ResponseType.YES:
        os.system('software-center python-yaml')
    else:
        sys.exit()

localedir = '/usr/share/locale' # FIXME
locale.bindtextdomain('lutris', localedir)
locale.textdomain('lutris')
gettext.bindtextdomain('lutris', localedir)
gettext.textdomain('lutris')

app = Application()
signal.signal(signal.SIGINT, signal.SIG_DFL)
exit_status = app.run(sys.argv)
sys.exit(exit_status)

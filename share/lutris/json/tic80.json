            "argument": "--fullscreen"
        },    
        {
            "option": "software_rendering",
            "type": "bool",
            "label": "Software rendering",
            "default": false,
            "argument": "--soft"
        },
        {
            "option": "skip",
            "type": "bool",
            "label": "Skip startup animation",
            "default": false,
            "argument": "--skip"
        },
        {
            "option": "nosound",
            "type": "bool",
            "label": "Start in silent mode",
            "default": false,
            "argument": "--volume=0"
        }
    ]
}

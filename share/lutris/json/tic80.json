{
    "human_name": "TIC-80",
    "description": "TIC-80 tiny computer",
    "platforms": ["TIC-80"],
    "runner_executable": "tic80/tic80",
    "flatpak_id": "com.tic80.TIC_80",
    "game_options": [
        {
            "option": "main_file",
            "type": "file",
            "label": "ROM file",
            "default_path": "game_path"
        }
